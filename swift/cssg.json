{
  "language": "swift",
  "sourceExtension": ".swift",

  "docRoot": "iOS SDK/",
  "testcaseTemplate": "TestCase.t",
  "snippetNameCommonPrefix": "swift-",

  "compileDist": "dist/cases/",

  "macro4doc": {
    "secretId": "\"${g.secretId}\"",
    "secretKey": "\"${g.secretKey}\""
  },
  "macro4test": {
    "secretId": "SecretStorage.shared.secretID as String?",
    "secretKey": "SecretStorage.shared.secretKey as String?"
  },

  "beforeRun": {
    "insert": [
      {
        "expression": "XCTAssertNil(error);",
        "indentation": 4,
        "isRegex": true,
        "anchor": "finishBlock\\s*=\\s*\\{\\s*\\(.+,\\s*error\\)\\s*in",
        "align": "below",
        "type": "assert",
        "excludes": [
          "transfer-upload-object"
        ]
      },
      {
        "expression": "exception.fulfill();",
        "indentation": 4,
        "isRegex": true,
        "anchor": "finishBlock\\s*=\\s*\\{\\s*\\(.+,\\s*error\\)\\s*in",
        "align": "below"
      },
      {
        "expression": "XCTAssertNil(error);",
        "indentation": 4,
        "isRegex": true,
        "anchor": "setFinish\\s*\\{\\s*\\(.+,\\s*error\\)\\s+in",
        "align": "below",
        "type": "assert",
        "excludes": [
          "transfer-upload-object"
        ]
      },
      {
        "expression": "exception.fulfill();",
        "indentation": 4,
        "isRegex": true,
        "anchor": "setFinish\\s*\\{\\s*\\(.+,\\s*error\\)\\s+in",
        "align": "below"
      }
    ]
  },

  "testGroup": {
    "global-init": {
      "defines": [
        "global-init"
      ],
      "isDefine": true,
      "appInit": true
    },
    "global-init-custom": {
      "defines": [
        "global-init-fence-queue",
        "global-init-signature",
        "global-init-signature-sts"
      ],
      "isDefine": true
    }
  }
}
